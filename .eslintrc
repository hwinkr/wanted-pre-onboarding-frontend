{
  "root": true,
  "env": {
    "browser": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": ["prettier", "@typescript-eslint"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "trailingComma": "all",
        "useTabs": false,
        "tabWidth": 2,
        "bracketSpacing": true,
        "singleQuote": true,
        "endOfLine": "lf"
      }
    ]
  },
  "parserOptions": {
    "parser": "@typescript-eslint/parser"
  }
}
